<div class="container">
  <p>
    <strong>User:</strong>
    <%= @vitamin.user.email %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @vitamin.content %>
  </p>
  <% if @vitamin.user == current_user %>
    <%= link_to 'Edit', edit_vitamin_path(@vitamin), class: "text-warning" %>
  <% end %>
  <%= link_to 'Back', vitamins_path, class: "text-success" %>
</div>
