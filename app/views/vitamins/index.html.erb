<div class="container">

  <h1>Vitamins</h1>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vitamins.each do |vitamin| %>
        <tr>
          <td><%= vitamin.user.email %></td>
          <td><%= vitamin.content %></td>
          <td><%= link_to 'Show', vitamin, class: "text-success" %></td>
          <% if vitamin.user == current_user %>
            <td><%= link_to 'Edit', edit_vitamin_path(vitamin), class: "text-success" %></td>
            <td><%= link_to 'Destroy', vitamin, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-success" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% if user_signed_in? %>
  <%= link_to 'New Vitamin', new_vitamin_path, class: "text-success" %>
<% end %>

</div>
