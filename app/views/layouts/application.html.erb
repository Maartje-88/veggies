<!DOCTYPE html>
<html>
  <head>
    <title>Veggies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", veggies_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", pages_about_path, class: "nav-link" %></li>
          <% if user_signed_in? %>
            <li class="nav-item pull-md-right"><%= link_to "Log out",
            signout_path, method: :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item pull-md-right"><%= link_to "Sign up",
             signup_path, class: "nav-link btn btn-primary" %></li>
             <li class="nav-item pull-md-right"><%= link_to "Sign in",
              signin_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <!-- Flash Messages -->
      <% flash.each do |name, message| %>
        <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
      <% end %>

      <!-- Footer -->
      <footer>
        <hr>
        <p>Maartje O'Connor</p>
      </footer>

      <%= yield %>
    </div>
  </body>
</html>
